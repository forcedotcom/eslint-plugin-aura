{
  "name": "@salesforce/eslint-plugin-aura",
  "version": "1.1.0",
  "description": "ESLint plugin for Aura",
  "main": "lib/index.js",
  "repository": "https://github.com/forcedotcom/eslint-plugin-aura",
  "author": "Marat Vyshegorodtsev <marat@salesforce.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "node ./node_modules/jest/bin/jest.js --config jest.config.js"
  },
  "keywords": [
    "eslint",
    "eslintplugin"
  ],
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "git-precommit-checks && lint-staged"
    }
  },
  "git-precommit-checks": {
    "rules": [
      {
        "filter": "\\.js$",
        "nonBlocking": "true",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "message": "You have unfinished devs",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "commitizen": "3.0.7",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.15.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.17.1",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "git-precommit-checks": "2.1.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4"
  },
  "peerDependencies": {
    "eslint": ">=5.0.0"
  },
  "dependencies": {
    "eslint-plugin-compat": "3.1.1"
  }
}
