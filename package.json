{
  "name": "@salesforce/eslint-plugin-aura",
  "version": "1.4.0",
  "description": "ESLint plugin for Aura",
  "main": "lib/index.js",
  "repository": "https://github.com/forcedotcom/eslint-plugin-aura",
  "author": "Marat Vyshegorodtsev <marat@salesforce.com>",
  "contributors": [
    {
      "name": "Julien Roche",
      "email": "roche.jul@gmail.com",
      "url": "https://github.com/rochejul"
    }
  ],
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "node tests/lib/rules/aura-api.js && node tests/lib/rules/aura-service.js && echo 'All tests passed'"
  },
  "keywords": [
    "eslint",
    "eslintplugin"
  ],
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "git-precommit-checks && lint-staged"
    }
  },
  "git-precommit-checks": {
    "rules": [
      {
        "filter": "\\.js$",
        "nonBlocking": "true",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "message": "You have unfinished devs",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "7.5.0",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.5.0",
    "git-precommit-checks": "2.1.0",
    "husky": "3.0.7",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "proxyquire": "^2.1.3"
  },
  "peerDependencies": {
    "eslint": ">=5.0.0"
  },
  "dependencies": {
    "eslint-plugin-compat": "^3.9.0"
  }
}
